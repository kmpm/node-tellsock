{
    "env": {
        "browser": false,
        "node": true
    },
    "globals": {
        "Promise": true
    },
    "rules": {
        "no-use-before-define": [2, "nofunc"],
        "no-loop-func": 2,
        "no-multiple-empty-lines": [1, {"max": 2}],
        "no-unused-vars": 1,
        "strict": [2, "never"],
        "space-before-blocks": [2, "always"],
        "space-after-keywords": [2, "always"],
        "semi": 2,
        "quotes": [2, "single"],
        "indent": [2, 2, {indentSwitchCase: true}],
        "eol-last": 2,
        "max-len": [2, 120, 2],
        "no-underscore-dangle": 0,
        "new-cap": [1, {
            "capIsNewExceptions": [
                "Message"
            ]
        }]
    }

}